<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result"
    android:background="#0d66a1">


    <TextView
        android:id="@+id/textViewValorReceber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:layout_centerHorizontal="true"
        android:text="Valor a Receber"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/valorReceberResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140sp"
        android:layout_centerHorizontal="true"
        android:text="Valor a Receber"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewDataPagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200sp"
        android:layout_centerHorizontal="true"
        android:text="Data do Pagamento"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/dataPagamentoResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240sp"
        android:layout_centerHorizontal="true"
        android:text="Data do Pagamento"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"/>


</RelativeLayout>